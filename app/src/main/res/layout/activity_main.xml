<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bakground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brandlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="53dp"/>


    <ImageView
        android:id="@+id/imageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brandtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewlogo"
        android:layout_marginTop="33dp"/>


    <Button
        android:id="@+id/btnSignInland"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="SIGN IN"
        android:background="@drawable/buttonborder"
        app:layout_constraintStart_toStartOf="@id/imageViewlogo"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewText"
        app:layout_constraintEnd_toEndOf="@id/imageViewlogo"/>


    <Button
        android:id="@+id/btnSignUpland"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textColor="@color/fontcolor"
        android:text="SIGN UP"
        android:background="@drawable/buttonbodernon"
        app:layout_constraintStart_toStartOf="@id/btnSignInland"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="25dp"


        app:layout_constraintTop_toBottomOf="@id/btnSignInland"
        app:layout_constraintEnd_toEndOf="@id/imageViewlogo"/>



</androidx.constraintlayout.widget.ConstraintLayout>