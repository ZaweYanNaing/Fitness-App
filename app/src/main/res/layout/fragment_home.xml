<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topnav"
            android:layout_marginTop="60dp"
            android:paddingHorizontal="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:id="@+id/userlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manlogo"
                android:contentDescription="Userlogo"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="15dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Good Day,"
                    android:textColor="@color/fontcolor" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:text="Zawe"
                    android:textColor="@color/fontcolor"
                    android:textSize="19sp"
                    android:textStyle="bold" />




            </LinearLayout>
            <ImageView
                android:id="@+id/iconLogout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logouticon"
                android:contentDescription="LogoutIcon"/>


        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/topnav"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="23dp"
                android:layout_height="345dp"
                android:background="@drawable/calories_shape"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calories_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Calories"
                    android:letterSpacing="0.02"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor" />

                <TextView
                    android:id="@+id/tvcalories_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="237"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor"
                    android:textSize="31sp"
                    android:letterSpacing="0.03"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Kcal"
                    android:letterSpacing="0.02"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="345dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/time_shape"
                android:orientation="vertical">


                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/time_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Time"
                    android:letterSpacing="0.02"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor" />

                <TextView
                    android:id="@+id/tvtime_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="2:30"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor"
                    android:textSize="31sp"
                    android:letterSpacing="0.03"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Min"
                    android:letterSpacing="0.02"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor"/>





            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="345dp"
                android:background="@drawable/step_shape"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/distance_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Distance"
                    android:letterSpacing="0.02"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor" />

                <TextView
                    android:id="@+id/tvdistance_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="3.25"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor"
                    android:textSize="31sp"
                    android:letterSpacing="0.03"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Mile"
                    android:letterSpacing="0.02"
                    android:textAlignment="center"
                    android:textColor="@color/fontcolor"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llGoal"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:elevation="4dp"
            android:orientation="vertical"
            android:layout_marginTop="370dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Your Daily Goal"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/fontcolor"
                    android:letterSpacing="0.09"
                    android:textSize="17sp"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/setGoalicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_icon"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="7"
                android:paddingHorizontal="15dp">


                <ImageView
                    android:id="@+id/Sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunday_passive"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/Monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/monday_active"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/Tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tuesday_active"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/Wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wednesday_passive"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/Thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/thursday_passive"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/Friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/friday_active"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/Saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/saturaday_passive"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:elevation="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/llGoal"
            android:background="@drawable/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start New Activity"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/fontcolor"
                    android:letterSpacing="0.09"
                    android:textSize="17sp"
                    android:layout_weight="1"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_icon"/>



            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="25dp"
                android:paddingHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/walk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/walk_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="7dp"
                        android:text="Walk"
                        android:textColor="@color/fontcolor"
                        android:fontFamily="@font/roboto_semibold"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/yoga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/yoga_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="7dp"
                        android:text="Yoga"
                        android:textColor="@color/fontcolor"
                        android:fontFamily="@font/roboto_semibold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lift_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Lift"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/fontcolor"
                        android:fontFamily="@font/roboto_semibold"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="25dp"
                android:paddingHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/skip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skip_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="7dp"
                        android:text="Skip"
                        android:textColor="@color/fontcolor"
                        android:fontFamily="@font/roboto_semibold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/push_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/push_up_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="7dp"
                        android:text="Push_Up"
                        android:textColor="@color/fontcolor"
                        android:fontFamily="@font/roboto_semibold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/boxing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/boxing_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Boxing"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/fontcolor"
                        android:fontFamily="@font/roboto_semibold"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>